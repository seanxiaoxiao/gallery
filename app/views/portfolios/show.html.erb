<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @portfolio.name %>
</p>

<%= link_to 'Add Album', new_album_path(:portfolio_id => @portfolio.id) %> |
<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to 'Back', portfolios_path %>

<table class="table">
  <% @portfolio.albums.each do |album| %>
      <tr>
        <td><%= album.id %></td>
        <% if album.photos.length > 0 %>
            <td><%= link_to image_tag(album.cover.slide_thumbnail_url), album %></td>
        <% else %>
            <td></td>
        <% end %>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
